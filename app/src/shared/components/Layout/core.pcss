.container {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  color: var(--greyDark);
}

.loadingIndicator {
  top: 2px;
}

.content {
  background-color: var(--white);
  flex-grow: 1;
  margin: 0 auto;
  width: 80%;
}

.pad {
  padding: 2.5rem 0;
}

@media (--sm-down) {
  .pad {
    padding: 0;
  }
}
