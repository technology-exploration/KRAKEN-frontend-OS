.root {
  padding: 3.75rem 0 8.1235rem;
  min-height: 100vh;
}

.Editor {}

.container {
}

.nav {
  display: none;
}

.grid {
  display: grid;
  grid-column-gap: 2.25rem;
}

.info {
  font-size: 1rem;
  letter-spacing: 0;
  line-height: 1.5rem;
  margin-bottom: 10rem;

  h1 {
    margin: 0;
    padding: 0;
    font-size: 1.5rem;
    letter-spacing: 0;
    line-height: 1.5rem;
    color: var(--greyDark);
    font-weight: var(--regular);
    border-bottom: 2px solid var(--grey4);
    padding-bottom: 1.25rem;
    margin-bottom: 2.5rem;
  }

  a,
  p a {
    text-decoration: none;
  }

  > section {
    margin: 0;
    padding: 0;
  }

  > section + section {
    margin-top: 7rem;
  }
}

@media (--md-up) {
  .grid {
    grid-template-columns: auto 120px;
  }

  .nav {
    display: block;
  }
}

@media (--lg-up) {
  .grid {
    grid-template-columns: auto 180px;
  }
}

@media (--xl) {
  .grid {
    grid-template-columns: 660px auto;
  }
}
